{
	"compilerOptions": {
		"incremental": true,
		"strict": true,
		"target": "es2019",
		"module": "commonjs",
		"allowJs": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"moduleResolution": "Node",
		"removeComments": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"composite": true,
		"skipLibCheck": true,
		"jsx": "react",
		"jsxFactory": "dom",
		"jsxFragmentFactory": "dom",
		"typeRoots": ["node_modules/@types"],
		"paths": {
			"@cxl/*": ["./*"]
		}
	},
	"files": []
}
