	"compilerOptions": {
		"incremental": true,
		"strict": true,
		"target": "es2020",
		"module": "commonjs",
		"lib": ["ES2022"],
		"experimentalDecorators": true,
		"sourceMap": false,
		"moduleResolution": "Node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"composite": true,
		"skipLibCheck": true,
