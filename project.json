{
	"ignore": ["./docs/"],
	"typescript.tsconfig_pattern": "tsconfig(?:\\.test)?\\.json$",
	"watch": {
		"rules": {
			"amd": {
				"files": ["amd/index.ts"],
				"tasks": "npm run build --prefix amd"
			},
			"ajax": {
				"files": ["ajax/index.ts"],
				"tasks": "cd ajax && npm run build"
			},
			"keyboard": {
				"files": ["keyboard/*"],
				"tasks": "cd keyboard && npm run build"
			},
			"blog": {
				"files": ["blog/index.ts"],
				"tasks": "cd blog && npm run build"
			},
			"build": {
				"files": ["build/*.ts"],
				"tasks": "cd build && npm run build"
			},
			"component": {
				"files": ["component/*"],
				"tasks": "cd component && npm run build"
			},
			"css": {
				"files": ["css/index.ts", "css/build.js"],
				"tasks": "cd css && npm run build"
			},
			"db": {
				"files": ["db/*.ts"],
				"tasks": "npm run build --prefix db"
			},
			"docgen": {
				"files": ["docgen/*.tsx", "docgen/*.ts"],
				"tasks": "cd docgen && npm run build"
			},
			"dom": {
				"files": ["dom/index.ts"],
				"tasks": "cd dom && npm run build"
			},
			"dts": {
				"files": ["dts/index.ts"],
				"tasks": "cd dts && npm run build"
			},
			"drag": {
				"files": ["drag/index.ts"],
				"tasks": "npm run build --prefix drag"
			},
			"rx": {
				"files": ["rx/index.ts", "rx/tsconfig.json", "rx/test.html"],
				"tasks": "cd rx && npm run build"
			},
			"template": {
				"files": ["template/index.ts", "template/build.js"],
				"tasks": "npm run build --prefix template"
			},
			"router": {
				"files": ["router/*.ts", "router/tsconfig.json"],
				"tasks": "cd router && npm run build"
			},
			"store": {
				"files": ["store/index.ts", "store/tsconfig.json"],
				"tasks": "cd store && npm run build"
			},
			"diff": {
				"files": ["diff/*"],
				"tasks": "npm run build --prefix diff"
			},
			"icons": {
				"files": ["ui/build-icons.js"],
				"tasks": "cd ui && node build-icons"
			},
			"ui-blog": {
				"files": ["ui-blog/*"],
				"tasks": "cd ui-blog && npm run build"
			},
			"ui-router": {
				"files": ["ui-router/*.tsx"],
				"tasks": "npm run build --prefix ui-router"
			},

			"ui": {
				"files": ["ui/*.tsx", "ui/build.js", "ui/*.html"],
				"tasks": "cd ui && npm run build"
			},
			"ui-table": {
				"files": ["ui-table/*.tsx", "ui-table/*.html"],
				"tasks": "npm run build --prefix ui-table"
			},
			"ui-datetime": {
				"files": ["ui-datetime/*.tsx", "ui-datetime/*.html"],
				"tasks": "npm run build --prefix ui-datetime"
			},
			"server": {
				"files": ["server/*.ts", "server/build.js"],
				"tasks": "npm run build --prefix server"
			},
			"spec": {
				"files": ["spec/*.ts"],
				"tasks": "npm run build --prefix spec"
			},
			"source": {
				"files": ["source/*.ts"],
				"tasks": "npm run build --prefix source"
			},
			"tester": {
				"files": ["tester/*"],
				"tasks": "npm run build --prefix tester"
			},
			"tsx": {
				"files": ["tsx/*.ts"],
				"tasks": "npm run build --prefix tsx"
			},
			"program": {
				"files": ["program/*"],
				"tasks": "npm run build --prefix program"
			},
			"ui-www": {
				"files": ["ui-www/*"],
				"tasks": "npm run build --prefix ui-www"
			},
			"ui-user": {
				"files": ["ui-user/*"],
				"tasks": "npm run build --prefix ui-user"
			},
			"ui-carousel": {
				"files": ["ui-carousel/*"],
				"tasks": "npm run build --prefix ui-carousel"
			},
			"ui-image": {
				"files": ["ui-image/*"],
				"tasks": "npm run build --prefix ui-image"
			},
			"render": {
				"files": ["render/*"],
				"tasks": "npm run build --prefix render"
			},
			"runner": {
				"files": ["runner/*"],
				"tasks": "npm run build --prefix runner"
			},
			"ui-ide": {
				"files": ["ui-ide/*"],
				"tasks": "npm run build --prefix ui-ide"
			},
			"ui-demo": {
				"files": ["ui-demo/*"],
				"tasks": "npm run build --prefix ui-demo"
			},
			"cli": {
				"files": ["cli/*"],
				"tasks": "npm run build --prefix cli"
			},
			"worker": {
				"files": ["worker/*"],
				"tasks": "npm run build --prefix worker"
			},
			"www": {
				"files": ["www/*"],
				"tasks": "npm run build --prefix www"
			},
			"reflex": {
				"files": ["reflex/*"],
				"tasks": "npm run build --prefix reflex"
			}
		}
	}
}
