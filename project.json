{
	"watch": {
		"rules": {
			"template": {
				"files": [ "template/src/*", "template/build.js" ],
				"tasks": "cd template && npm run build"
			},

			"ui": {
				"files": [
					"template/src/*", "ui/src/*", "template/build.js", "ui/build.js"
				],
				"tasks": "cd ui && npm run build"
			},

			"router": {
				"files": [ "router/src/*", "router/build.js" ],
				"tasks": "cd router && npm run build"
			},

			"fb": {
				"files": [ "fb/src/*", "fb/build.js" ],
				"tasks": "cd fb && npm run build"
			}
		}
	}
}