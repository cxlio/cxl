{
	"watch": {
		"rules": {
			"template": {
				"files": [ "template/src/*", "template/build.js" ],
				"tasks": "cd template && npm run build"
			},

			"ui": {
				"files": [
					"template/src/*",
					"ui/src/*",
					"template/build.js",
					"ui/build.js",
					"rx/index.js"
				],
				"tasks": "node ui/build"
			},

			"router": {
				"files": [ "router/src/*", "router/build.js" ],
				"tasks": "node router/build"
			},

			"fb": {
				"files": [ "fb/src/*", "fb/build.js" ],
				"tasks": "node fb/build"
			},

			"docs": {
				"files": [ "docs/src/*" ],
				"tasks": "cd docs && npm run build"
			}
		}
	}
}