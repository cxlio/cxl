{
	"watch": {
		"rules": {
			"template": {
				"files": [ "template/src/*", "template/build.js" ],
				"tasks": "cd template && npm run build"
			},

			"icons": {
				"files": [ "ui/build-icons.js" ],
				"tasks": "node ui/build-icons"
			},

			"ui": {
				"files": [
					"template/src/*",
					"ui/src/*",
					"template/build.js",
					"ui/build.js",
					"rx/index.js"
				],
				"tasks": "node ui/build"
			},

			"fb": {
				"files": [ "fb/src/*", "fb/build.js" ],
				"tasks": "node fb/build"
			},

			"docs": {
				"files": [ "docs/src/*", "docs/build.js" ],
				"tasks": "cd docs && node build"
			}
		}
	}
}