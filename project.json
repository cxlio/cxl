{
	"watch": {
		"rules": {
			"ajax": {
				"files": ["ajax/index.ts"],
				"tasks": "cd ajax && npm run build"
			},
			"build": {
				"files": ["build/index.ts", "build/tsconfig.json"],
				"tasks": "cd build && node build"
			},
			"component": {
				"files": ["component/index.ts"],
				"tasks": "cd component && node build"
			},
			"css": {
				"files": ["css/index.ts"],
				"tasks": "cd css && node build"
			},
			"dom": {
				"files": ["dom/index.ts"],
				"tasks": "cd dom && node build"
			},
			"rx": {
				"files": ["rx/index.ts", "rx/tsconfig.json"],
				"tasks": "cd rx && npm run build"
			},
			"template": {
				"files": ["template/index.ts", "template/build.js"],
				"tasks": "cd template && npm run test"
			},
			"router": {
				"files": ["router/index.ts", "router/tsconfig.json"],
				"tasks": "cd router && npm run build"
			},
			"store": {
				"files": ["store/index.ts", "store/tsconfig.json"],
				"tasks": "cd store && npm run build"
			},

			"store-test": {
				"files": ["store/test.ts"],
				"tasks": "cd store && npm test"
			},

			"diff": {
				"files": ["diff/src/*.js"],
				"tasks": "node diff/build"
			},

			"icons": {
				"files": ["ui/build-icons.js"],
				"tasks": "node ui/build-icons"
			},

			"ui": {
				"files": [
					"template/src/*",
					"ui/src/*",
					"template/build.js",
					"ui/build.js",
					"rx/index.js"
				],
				"tasks": "node ui/build"
			},

			"fb": {
				"files": ["fb/src/*", "fb/build.js"],
				"tasks": "node fb/build"
			},

			"docs": {
				"files": ["docs/src/*", "docs/build.js"],
				"tasks": "cd docs && node build"
			},

			"ui-docs": {
				"files": ["ui-docs/src/*", "ui-docs/build.js"],
				"tasks": "node ui-docs/build"
			},
			"tester": {
				"files": [
					"tester/index.ts",
					"tester/runner.ts",
					"tester/build.js"
				],
				"tasks": "node tester/build"
			}
		}
	}
}
